{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist-tsc",
    "types": ["vitest/importMeta"],
    "paths": {
      // these virtual imports are replaced in Rollup
      "@iroha2/~crypto-wasm-pkg/*": ["./crypto-wasm/wasm-pkg-*/iroha_crypto"],
      "@iroha2/*": ["./packages/*/src/lib.ts"]
    }
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "./packages/client-isomorphic-*",
    "./crypto-wasm",
    "./.iroha",
    "./tests/browser",
    "./tests/node",
  ],
  "include": ["**/*.ts", "**/*.js", "./tests/support/**/*"]
}
