// this the shared base config for all packages.
{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",

  // to set /etc folder relative to project root independently from each package location
  "projectFolder": ".",

  "apiReport": {
    "enabled": true,
    "reportFolder": "<projectFolder>/etc/api/reports",
    "reportTempFolder": "<projectFolder>/etc/api/tmp"
  },

  "docModel": {
    "enabled": true,
    "apiJsonFilePath": "<projectFolder>/etc/api/tmp/<unscopedPackageName>.api.json"
  },

  "dtsRollup": {
    "enabled": true
  },

  "tsdocMetadata": {
    "enabled": false
  },

  "messages": {
    "compilerMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },

    "extractorMessageReporting": {
      "default": {
        "logLevel": "warning",
        "addToApiReportFile": true
      },

      "ae-missing-release-tag": {
        "logLevel": "none"
      },

      // Error: packages/i64-fixnum/src/lib.ts:1:1 -
      // (ae-wrong-input-file-type) Incorrect file type; API Extractor expects to analyze compiler outputs with
      // the .d.ts file extension. Troubleshooting tips: https://api-extractor.com/link/dts-error
      //
      // I can be pretty sure that extractor input are .d.ts files.
      "ae-wrong-input-file-type": {
        "logLevel": "none"
      }
    },

    "tsdocMessageReporting": {
      "default": {
        "logLevel": "warning"
      },

      "tsdoc-undefined-tag": {
        "logLevel": "none"
      }
    }
  }
}
