{
    "name": "@iroha2/monorepo",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "test": "pnpm test --parallel --filter @iroha2/client --filter @iroha2/crypto --filter @iroha2/i64-fixnum",
        "build": "esno scripts/build",
        "build:clean": "del-cli ./.declaration ./packages/iroha-client/dist ./packages/iroha-data-model/dist",
        "build:rollup": "rollup -c rollup.config.js",
        "build:dts": "tsc -p tsconfig.json --declaration --declarationDir .declaration --emitDeclarationOnly",
        "type-check": "tsc --noEmit",
        "publish-all": "esno scripts/publish-all"
    },
    "devDependencies": {
        "@changesets/cli": "^2.17.0",
        "@jest/types": "^27.2.5",
        "@rollup/plugin-node-resolve": "^13.0.5",
        "@types/jest": "^27.0.2",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "chalk": "^4.1.2",
        "consola": "^2.15.3",
        "del-cli": "^4.0.1",
        "esbuild-register": "^3.0.0",
        "eslint": "^7.32.0",
        "eslint-config-alloy": "^4.4.0",
        "eslint-plugin-cypress": "^2.12.1",
        "esno": "^0.10.1",
        "execa": "^5.1.1",
        "prettier": "^2.4.1",
        "prettier-eslint": "^13.0.0",
        "rollup": "^2.58.0",
        "rollup-plugin-dts": "^4.0.0",
        "rollup-plugin-esbuild": "^4.6.0",
        "typescript": "^4.4.4"
    }
}
