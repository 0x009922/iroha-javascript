{
  "name": "@iroha2/monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format:fix": "prettier-eslint \"**/*.{ts,js,vue,json}\" --write",
    "lint": "eslint --ext=\".ts,.js,.vue\" .",
    "run-all-checks": "pnpm jake run-all-checks",
    "build:all": "pnpm jake build:all",
    "typecheck": "tsc --noEmit",
    "jake": "jake -f jakefile.cjs",
    "rollup": "NODE_OPTIONS='--import tsx/esm' rollup -c etc/rollup.config.ts",
    "docs:build": "run-s docs:build:api docs:build:vitepress",
    "docs:build:api": "NODE_OPTIONS='--import tsx/esm' typedoc --options etc/typedoc.config.ts",
    "docs:build:vitepress": "vitepress build docs"
  },
  "devDependencies": {
