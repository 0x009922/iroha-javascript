{
    "name": "@iroha2/monorepo",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "gulpts": "pnpm gulp --require esbuild-register -f gulpfile.ts",
        "preinstall": "npx only-allow pnpm",
        "test": "run-s test:i64-fixnum test:crypto test:client",
        "test:crypto": "pnpm test --filter monorepo-crypto",
        "test:i64-fixnum": "pnpm test --filter i64-fixnum",
        "test:client": "run-s build:isomorphic-ws-and-fetch test:client:run",
        "test:client:run": "pnpm test --filter client",
        "clean": "pnpm gulpts clean",
        "build": "pnpm gulpts build",
        "build:tsc": "pnpm build:tsc --parallel --filter data-model --filter client --filter i64-fixnum",
        "build:isomorphic-ws-and-fetch": "pnpm build --filter \"@iroha2/client-isomorphic-*\"",
        "publish-all": "pnpm gulpts publishAll",
        "type-check": "tsc --noEmit",
        "api:extract": "pnpm gulpts runApiExtractor",
        "api:extract:local": "pnpm gulpts runApiExtractorLocal",
        "api:document": "api-documenter markdown -i etc/api/tmp -o docs/api",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:serve": "vitepress serve docs"
    },
    "devDependencies": {
        "@changesets/cli": "^2.21.0",
        "@iroha2/dev-iroha-bins": "workspace:^0.0.0",
        "@iroha2/test-peer": "workspace:^0.0.1",
        "@jest/types": "^27.5.1",
        "@microsoft/api-documenter": "^7.15.3",
        "@microsoft/api-extractor": "^7.19.4",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "@types/gulp": "^4.0.9",
        "@types/jest": "^27.4.1",
        "@types/markdown-it": "^12.2.3",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "consola": "^2.15.3",
        "debug": "^4.3.3",
        "del": "^6.0.0",
        "esbuild-register": "^3.3.2",
        "eslint": "^7.32.0",
        "eslint-config-alloy": "^4.5.1",
        "eslint-plugin-cypress": "^2.12.1",
        "gulp": "^4.0.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1",
        "prettier-eslint": "^13.0.0",
        "rollup": "^2.68.0",
        "sass": "^1.49.9",
        "typescript": "^4.5.5",
        "vitepress": "^0.20.10",
        "zx": "^4.3.0"
    }
}
