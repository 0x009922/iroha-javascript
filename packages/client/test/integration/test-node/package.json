{
    "name": "@iroha2/client-test-node",
    "private": true,
    "scripts": {
        "test": "run-s test:prepare test:run",
        "test:prepare": "run-p test:prepare:build-isomorphic test:prepare:peer",
        "test:prepare:build-isomorphic": "pnpm run build --parallel --filter \"@iroha2/client-isomorphic-*\"",
        "test:prepare:peer": "esno pretest",
        "test:run": "cross-env DEBUG=@iroha2* jest -i"
    },
    "dependencies": {
        "@iroha2/client": "workspace:^0.4.0",
        "@iroha2/crypto-target-node": "workspace:^0.1.1",
        "@iroha2/test-peer": "workspace:^0.0.1",
        "consola": "^2.15.3",
        "cross-env": "^7.0.3",
        "esbuild-jest": "^0.5.0",
        "esno": "^0.12.1",
        "hada": "^0.0.8",
        "immutable": "^4.0.0",
        "jest": "^27.4.4",
        "npm-run-all": "^4.1.5"
    },
    "devDependencies": {
        "esbuild-runner": "^2.2.1"
    }
}
